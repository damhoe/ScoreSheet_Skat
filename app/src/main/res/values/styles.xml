    <style name="Widget.App.PopupMenu" parent="@style/Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="Widget.App.CollapsingToolbar" parent="@style/Widget.Material3.CollapsingToolbar.Medium">
        <item name="elevation">0dp</item>
        <item name="titleEnabled">true</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="statusBarScrim">?colorSurfaceVariant</item>
        <item name="contentScrim">?colorSurfaceVariant</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Collapsed</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Expanded</item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.AppBarLayout.Variant" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?colorSurfaceContainer</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.Toolbar.Variant" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Variant</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Variant" parent="">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="android:minHeight">80dp</item>
        <item name="backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="titleTextColor">?colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.BottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.NavViewItemActive</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.NavViewItemInactive</item>
        <item name="backgroundTint">?colorSurfaceVariant</item>
    </style>

    <style name="TextAppearance.App.NavViewItemInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="TextAppearance.App.NavViewItemActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="NumberPicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="Widget.App.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="Widget.App.AutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.FilledBox">

    </style>

    <style name="Widget.App.Seekbar" parent="Widget.AppCompat.SeekBar">
