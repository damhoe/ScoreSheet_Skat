<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:descendantFocusability="blocksDescendants"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_behavior=".shared_ui.behaviors.CollapseAppBarBehavior"
            app:liftOnScroll="true"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
                style="@style/Widget.App.CollapsingToolbar"
                app:layout_behavior=".shared_ui.behaviors.CollapseAppBarBehavior"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleCollapseMode="scale"
                app:titleEnabled="true"
                app:expandedTitleMarginBottom="20dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="6dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="16dp"
                    android:background="?attr/colorSecondaryContainer"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="pin"
                    app:title="@string/title_statistics">

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:translationZ="-1dp"
            android:contentDescription="@string/description_scroll_view_main_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".statistics.adapter.ui.StatisticsFragment">

                <TextView
                    android:id="@+id/label_legend_unfinished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.6"
                    android:text="unfinished"
                    android:textAppearance="@style/TextAppearance.App.BodySmall"
                    app:layout_constraintEnd_toStartOf="@id/label_legend_finished"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_total" />

                <TextView
                    android:id="@+id/label_legend_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:alpha="0.6"
                    android:text="finished"
                    android:textAppearance="@style/TextAppearance.App.BodySmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/label_legend_unfinished"
                    app:layout_constraintTop_toTopOf="@id/label_legend_unfinished" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.9"
                    android:background="?attr/colorTertiaryContainer"
                    app:layout_constraintBottom_toBottomOf="@id/label_legend_unfinished"
                    app:layout_constraintEnd_toStartOf="@id/label_legend_finished"
                    app:layout_constraintTop_toTopOf="@id/label_legend_unfinished" />

                <View
                    android:id="@+id/view"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.9"
                    android:background="?attr/colorTertiary"
                    app:layout_constraintBottom_toBottomOf="@id/label_legend_unfinished"
                    app:layout_constraintEnd_toStartOf="@id/label_legend_unfinished"
                    app:layout_constraintTop_toTopOf="@id/label_legend_unfinished" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_year"
                    android:layout_width="0dp"
                    android:layout_height="142dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toStartOf="@id/card_month"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toEndOf="@id/card_total"
                    app:layout_constraintTop_toTopOf="@id/card_total"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="@string/title_this_year_progress"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall" />

                    <TextView
                        android:id="@+id/year_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="40dp"
                        android:textAppearance="@style/TextAppearance.App.LabelLarge"
                        android:textStyle="bold"
                        tools:text="6" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/year_progress_indicator"
                        style="@style/Widget.App.CircularProgressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="16dp"
                        android:progress="50"
                        app:indicatorSize="56dp"
                        app:trackCornerRadius="6dp"
                        app:trackThickness="6dp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_month"
                    android:layout_width="0dp"
                    android:layout_height="142dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="24dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toEndOf="@id/card_year"
                    app:layout_constraintTop_toTopOf="@id/card_total"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="@string/title_this_month_progress"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall" />

                    <TextView
                        android:id="@+id/month_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="40dp"
                        android:textAppearance="@style/TextAppearance.App.LabelLarge"
                        android:textStyle="bold"
                        tools:text="12" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/month_progress_indicator"
                        style="@style/Widget.App.CircularProgressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="16dp"
                        android:progress="70"
                        app:indicatorSize="56dp"
                        app:trackCornerRadius="6dp"
                        app:trackThickness="6dp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_total"
                    android:layout_width="0dp"
                    android:layout_height="142dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toStartOf="@id/card_year"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="@string/title_overall_progress"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall" />

                    <TextView
                        android:id="@+id/total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="40dp"
                        android:textAppearance="@style/TextAppearance.App.LabelLarge"
                        android:textStyle="bold"
                        tools:text="12" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/total_progress_indicator"
                        style="@style/Widget.App.CircularProgressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="16dp"
                        android:progress="70"
                        app:indicatorSize="56dp"
                        app:trackCornerRadius="6dp"
                        app:trackThickness="6dp" />

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.bottomappbar.BottomAppBar
            style="@style/Widget.App.BottomAppBar"
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:elevation="0dp"
            app:menu="@menu/statistics_menu" />

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/addButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_anchor="@id/bottom_app_bar"-->
<!--            android:src="@drawable/ic_add_black_24dp"-->
<!--            android:contentDescription="@string/description_new_game"-->
<!--            style="@style/Widget.Material3.FloatingActionButton.Secondary"-->
<!--            />-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>