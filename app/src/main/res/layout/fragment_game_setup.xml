<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.damhoe.skatscores.game.game_setup.adapter.in.ui.GameSetupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondaryContainer"
            app:layout_constraintTop_toTopOf="parent">

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    app:iconTint="?attr/colorOnPrimaryContainer"
                    app:icon="@drawable/ic_arrow_back_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbarLayout"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".game.game_setup.adapter.in.ui.GameSetupFragment"
                android:paddingBottom="108dp">

                <TextView
                    android:id="@+id/list_name_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wie soll die Liste \nheissen?"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textStyle="bold"
                    android:paddingBottom="24dp"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="36dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/list_name_text_input"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_cancel_24dp"
                    app:endIconMode="clear_text"
                    style="@style/Widget.App.TextInputLayout.Secondary"
                    app:layout_constraintTop_toBottomOf="@id/list_name_title_view"
                    app:layout_constraintStart_toStartOf="@id/list_name_title_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/list_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusedByDefault="false"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        tools:text="New List 88"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/coloredBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/list_name_text_input"
                    android:layout_marginBottom="-36dp"
                    android:translationZ="-1dp"
                    android:background="@drawable/background_large_top_app_bar" />

                <TextView
                    android:id="@+id/title_player_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/settingsPlayerCountTitle"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    app:layout_constraintTop_toBottomOf="@id/coloredBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_player_count_info"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/ic_info_24dp"
                    app:iconTint="?attr/colorSurfaceContainer"
                    android:layout_marginTop="-4dp"
                    app:layout_constraintTop_toTopOf="@id/title_player_count"
                    app:layout_constraintStart_toEndOf="@id/title_player_count"
                    android:padding="2dp"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/rg_player_count"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/button_three_players"
                    app:selectionRequired="true"
                    app:layout_constraintStart_toStartOf="@id/title_player_count"
                    app:layout_constraintTop_toBottomOf="@id/title_player_count">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.App.Button.OutlinedButton"
                        android:id="@+id/button_three_players"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="3"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:id="@+id/title_scoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_scoring_settings"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    android:layout_marginTop="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintStart_toStartOf="@id/rg_player_count"
                    app:layout_constraintTop_toBottomOf="@id/rg_player_count"/>


                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/scoring_settings_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/simple_scoring_rb"
                    app:selectionRequired="true"
                    app:layout_constraintStart_toStartOf="@id/title_scoring"
                    app:layout_constraintTop_toBottomOf="@id/title_scoring">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.App.Button.OutlinedButton"
                        android:id="@+id/simple_scoring_rb"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/option_simple_scoring"/>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.App.Button.OutlinedButton"
                        android:id="@+id/tournament_scoring_rb"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/option_tournament_scoring" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:id="@+id/title_round_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_rounds_settings"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    android:layout_marginTop="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintStart_toStartOf="@id/title_player_count"
                    app:layout_constraintTop_toBottomOf="@+id/scoring_settings_rg"/>

                <TextView
                    android:id="@+id/number_of_rounds_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    android:layout_marginStart="36dp"
                    app:layout_constraintStart_toEndOf="@id/title_round_count"
                    app:layout_constraintTop_toTopOf="@id/title_round_count"
                    app:layout_constraintBottom_toBottomOf="@id/title_round_count"
                    tools:text="12"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/rounds_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.App.Slider"
                    android:stepSize="3"
                    android:valueFrom="3"
                    android:valueTo="36"
                    android:value="12"
                    app:labelBehavior="floating"
                    android:contentDescription="Number of Spitzen"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/title_round_count"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:layout_marginStart="@dimen/fab_margin_bottom"
            android:layout_marginEnd="@dimen/fab_margin_bottom"
            android:text="@string/title_start"
            style="@style/Widget.Material3.Button"
            android:contentDescription="@string/description_start" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>