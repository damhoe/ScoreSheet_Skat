<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.app_settings.ui.SettingsFragment">

        <TextView
            android:id="@+id/title_category_languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:paddingTop="16dp"
            android:text="@string/title_category_languages"
            android:textAppearance="@style/TextAppearance.App.CategorySubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_category_languages"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >

            <TextView
                android:id="@+id/title_settings_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_language"
                android:textAppearance="@style/TextAppearance.App.ItemTitle"
                android:layout_marginStart="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/language_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textAppearance="@style/TextAppearance.App.BodyLight"
                app:layout_constraintStart_toStartOf="@id/title_settings_language"
                app:layout_constraintTop_toBottomOf="@id/title_settings_language" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/spacer_language"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_language" />

        <TextView
            android:id="@+id/title_category_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/title_category_general"
            android:textAppearance="@style/TextAppearance.App.CategorySubtitle"
            app:layout_constraintStart_toStartOf="@id/title_category_languages"
            app:layout_constraintTop_toBottomOf="@id/spacer_language" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_badge_unfinished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_category_general"
            android:paddingTop="16dp"
            android:clickable="false"
            >

            <TextView
                android:id="@+id/title_badge_unfinished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_badge_unfinished"
                android:textAppearance="@style/TextAppearance.App.ItemTitle"
                android:layout_marginStart="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="@id/title_badge_unfinished"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/title_badge_unfinished" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <View
            android:id="@+id/spacer_general"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_badge_unfinished" />

        <TextView
            android:id="@+id/title_category_match_presets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/title_settings_match_preset"
            android:textAppearance="@style/TextAppearance.App.CategorySubtitle"
            app:layout_constraintStart_toStartOf="@id/title_category_languages"
            app:layout_constraintTop_toBottomOf="@id/spacer_general" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_number_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_category_match_presets"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >

            <TextView
                android:id="@+id/title_number_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_number_players"
                android:textAppearance="@style/TextAppearance.App.ItemTitle"
                android:layout_marginStart="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/number_players_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textAppearance="@style/TextAppearance.App.BodyLight"
                app:layout_constraintStart_toStartOf="@id/title_number_players"
                app:layout_constraintTop_toBottomOf="@id/title_number_players" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_scoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_number_players"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >

            <TextView
                android:id="@+id/title_scoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_scoring"
                android:textAppearance="@style/TextAppearance.App.ItemTitle"
                android:layout_marginStart="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/scoring_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textAppearance="@style/TextAppearance.App.BodyLight"
                app:layout_constraintStart_toStartOf="@id/title_scoring"
                app:layout_constraintTop_toBottomOf="@id/title_scoring" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_number_rounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_scoring"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            >

            <TextView
                android:id="@+id/title_number_rounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_number_rounds"
                android:textAppearance="@style/TextAppearance.App.ItemTitle"
                android:layout_marginStart="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/number_rounds_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textAppearance="@style/TextAppearance.App.BodyLight"
                app:layout_constraintStart_toStartOf="@id/title_number_rounds"
                app:layout_constraintTop_toBottomOf="@id/title_number_rounds" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>