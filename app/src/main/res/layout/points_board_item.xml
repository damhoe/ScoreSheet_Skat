<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/round_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:layout_weight="0.05"
        android:textAppearance="@style/TextAppearance.App.BodySmall"
        tools:text="18" />

    <TextView
        android:id="@+id/game_points_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.BodyLarge"
        tools:text="24" />

    <TextView
        android:id="@+id/points1_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.App.BodyLarge"
        tools:text="24" />

    <TextView
        android:id="@+id/points2_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.App.BodyLarge"
        tools:text="0" />

    <TextView
        android:id="@+id/points3_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.App.BodyLarge"
        tools:text="0" />

</LinearLayout>