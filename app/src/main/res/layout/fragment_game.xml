<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".game.adapter.in.ui.GameFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimaryContainer">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/current_round_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="48dp"
                android:textAppearance="@style/TextAppearance.App.BodyLarge"
                tools:text="Round 3/26" />

            <TextView
                android:id="@+id/dealer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodyLarge"
                app:layout_constraintBottom_toTopOf="@id/current_round_text"
                app:layout_constraintStart_toStartOf="@id/current_round_text"
                android:layout_marginBottom="16dp"
                tools:text="Damian gibt" />

            <include layout="@layout/points_board_title"
                android:id="@+id/title_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <include layout="@layout/points_board_top_sums"
                android:id="@+id/points_board_top_sums"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/title_view"
                />

            <View
                android:id="@+id/top_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/points_board_top_sums"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <!--<include layout="@layout/points_board_item"
                android:id="@+id/item"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/top_divider"
                />
            -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scores_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/top_divider"
                app:layout_constraintBottom_toTopOf="@id/bottom_divider"
                tools:listitem="@layout/points_board_item"
                />

            <View
                android:id="@+id/bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorSurfaceVariant"
                app:layout_constraintBottom_toTopOf="@id/wins_losses_bonus_view"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />

            <include layout="@layout/points_board_wins_losses"
                android:id="@+id/wins_losses_bonus_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toTopOf="@id/lost_games_bonus_view"
                />

            <include layout="@layout/points_board_lost_games"
                android:id="@+id/lost_games_bonus_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toTopOf="@id/bottom_sum_view"
                />

            <include layout="@layout/points_board_bottom_sum"
                android:id="@+id/bottom_sum_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="136dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_edit_24dp"
            android:textStyle="bold"
            style="@style/Widget.Material3.FloatingActionButton.Large.Secondary"
            android:contentDescription="@string/description_new_score" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>