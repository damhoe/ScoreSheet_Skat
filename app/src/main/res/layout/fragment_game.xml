<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".game.adapter.in.ui.GameFragment">

        <TextView
            android:id="@+id/current_round_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="48dp"
            android:textAppearance="@style/TextAppearance.App.BodyLarge"
            tools:text="Round 3/26" />

        <TextView
            android:id="@+id/dealer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.BodyLarge"
            app:layout_constraintBottom_toTopOf="@id/current_round_text"
            app:layout_constraintStart_toStartOf="@id/current_round_text"
            android:layout_marginBottom="16dp"
            tools:text="Damian gibt" />

        <include layout="@layout/points_board_title"
            android:id="@+id/title_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include layout="@layout/points_board_top_sums"
            android:id="@+id/points_board_top_sums"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/title_view"
            />

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/points_board_top_sums"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <!--<include layout="@layout/points_board_item"
            android:id="@+id/item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/top_divider"
            />
        -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scores_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_divider"
            app:layout_constraintBottom_toTopOf="@id/bottom_divider"
            tools:listitem="@layout/points_board_item"
            />

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintBottom_toTopOf="@id/wins_losses_bonus_view"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <include layout="@layout/points_board_wins_losses"
            android:id="@+id/wins_losses_bonus_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/lost_games_bonus_view"
            />

        <include layout="@layout/points_board_lost_games"
            android:id="@+id/lost_games_bonus_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_sum_view"
            />

        <include layout="@layout/points_board_bottom_sum"
            android:id="@+id/bottom_sum_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="136dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>