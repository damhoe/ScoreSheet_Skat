<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_text_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/ic_title_black_24dp"
        app:endIconDrawable="@drawable/ic_cancel_black_24dp"
        app:endIconMode="clear_text"
        style="@style/Widget.App.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusedByDefault="false"
            tools:text="My first skat round"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/scoring_settings_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_group_background"
        app:layout_constraintTop_toBottomOf="@id/title_text_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/simple_scoring_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/GameSettingsRadioButton"
            android:checked="true"
            android:text="@string/option_simple_scoring"
            android:button="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/tournament_scoring_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/GameSettingsRadioButton"
            android:text="@string/option_tournament_scoring"
            android:button="@android:color/transparent"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>