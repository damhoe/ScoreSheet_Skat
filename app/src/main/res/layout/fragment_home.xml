<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:descendantFocusability="blocksDescendants"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:context=".home.HomeFragment">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                style="@style/Widget.Material3.CardView.Filled"
                app:cardBackgroundColor="?colorTertiaryContainer"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardUseCompatPadding="true"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_welcome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_lightbulb_24dp"
                        app:tint="?colorTertiary"
                        app:layout_constraintTop_toTopOf="@id/welcome_text"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/welcome_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/welcome_text"
                        android:textAppearance="@style/TextAppearance.App.TitleMedium"
                        android:textColor="?colorOnTertiaryContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/icon_welcome"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/title_unfinished_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="42dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Open Games"
                android:textAppearance="@style/TextAppearance.App.TitleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_welcome" />

            <TextView
                android:id="@+id/label_unfinished_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.6"
                android:text="No unfinished games found."
                android:textAppearance="@style/TextAppearance.App.BodyMedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_unfinished_games" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/open_games_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/title_unfinished_games"
                app:layout_constraintBottom_toBottomOf="parent"
                android:overScrollMode="never"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
