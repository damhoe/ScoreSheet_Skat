<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:descendantFocusability="blocksDescendants"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_behavior=".shared_ui.behaviors.CollapseAppBarBehavior"
            app:liftOnScroll="true"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/collapsingToolbarLayoutMediumSize"
                style="@style/Widget.App.CollapsingToolbar"
                app:layout_behavior=".shared_ui.behaviors.CollapseAppBarBehavior"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleCollapseMode="scale"
                app:titleEnabled="true"
                app:expandedTitleMarginBottom="20dp"
                >

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="pin"
                    app:title="@string/title_library">

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingBottom="164dp"
            android:clipToPadding="false"
            android:translationZ="-1dp"
            android:contentDescription="Scroll view that contains main content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                tools:context=".home.LibraryFragment">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_filter"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_edit_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/title_filter"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/this_month_games_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/label_this_month"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_filter" />

                <TextView
                    android:id="@+id/this_month_no_games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.6"
                    android:text="@string/text_this_month_no_games"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/this_month_games_title" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/this_month_games_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/this_month_games_title"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_game_preview"
                    tools:itemCount="1"
                    />

                <TextView
                    android:id="@+id/older_games_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/label_older"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/this_month_games_rv" />

                <TextView
                    android:id="@+id/older_no_games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.6"
                    android:text="@string/text_older_no_games"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/older_games_title" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/older_games_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/older_games_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_game_preview"
                    tools:itemCount="0"
                    android:contentDescription="@string/description_older_games"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="@dimen/fab_above_bottom_nav_margin_bottom"
            app:icon="@drawable/ic_add_24dp"
            android:text="@string/title_new_game"
            android:contentDescription="Primary top level add action"
            style="@style/Widget.Material3.FloatingActionButton.Primary"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>