<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="dummy"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            tools:text="" />

        <TextView
            android:id="@+id/game_points_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            tools:text="" />

        <TextView
            android:id="@+id/points1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.TitleMedium"
            android:textStyle="bold"
            tools:text="24" />

        <TextView
            android:id="@+id/points2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.TitleMedium"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/points3_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.App.TitleMedium"
            android:textStyle="bold"
            tools:text="0" />

    </LinearLayout>

</layout>
