<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/library">

    <fragment
        android:id="@+id/library"
        android:name="com.damhoe.scoresheetskat.home.LibraryFragment"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_library_to_settings"
            app:destination="@id/app_settings"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            />
        <action
            android:id="@+id/action_library_to_gameActivity"
            app:destination="@id/gameActivity"
            app:enterAnim="@anim/enter_from_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/exit_to_bottom"
            />
    </fragment>

    <fragment
        android:id="@+id/app_settings"
        android:name="com.damhoe.scoresheetskat.app.app_settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <argument
            android:name="ShowBottomAppBar"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_app_settings_to_about"
            app:destination="@id/about" />
    </fragment>

    <fragment
        android:id="@+id/player_details"
        android:name="com.damhoe.scoresheetskat.player.adapter.in.ui.PlayerDetailsFragment"
        tools:layout="@layout/fragment_player_details"/>
    <fragment
        android:id="@+id/about"
        android:name="com.damhoe.scoresheetskat.app.about.AboutFragment"
        tools:layout="@layout/fragment_about"
        />
    <fragment
        android:id="@+id/players"
        android:name="com.damhoe.scoresheetskat.player.adapter.in.ui.PlayersFragment"
        tools:layout="@layout/fragment_players">
        <action
            android:id="@+id/action_players_to_player_details"
            app:destination="@id/player_details"
            app:enterAnim="@anim/zoom_fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            />
    </fragment>

    <fragment
        android:id="@+id/statistics"
        android:name="com.damhoe.scoresheetskat.statistics.adapter.ui.StatisticsFragment"
        tools:layout="@layout/fragment_statistics"/>

    <activity
        android:id="@+id/gameActivity"
        android:name="com.damhoe.scoresheetskat.game.GameActivity"
        android:label="activity_game"
        tools:layout="@layout/activity_game" >
        <argument
            android:name="gameId"
            app:argType="long"
            android:defaultValue="-1L" />
    </activity>

</navigation>